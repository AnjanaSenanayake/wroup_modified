<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".pipelineActivity">

    <TextView
        android:id="@+id/object_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Object ID: "/>
    <EditText
        android:id="@+id/object_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/object_id"
        android:layout_alignBaseline="@id/object_id"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:id="@+id/object_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Object Name: "
        android:layout_below="@id/object_id_input"/>
    <EditText
        android:id="@+id/object_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/object_name"
        android:layout_alignBaseline="@id/object_name"/>
    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/object_name_input"
        android:text="Send Object"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/list_view_objects"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        tools:listitem="@layout/list_item_object"
        android:layout_below="@id/btn_send"/>


</RelativeLayout>